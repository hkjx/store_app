= form_for @product do |f|
  -if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg
  
  .field
    = f.label :category
    = f.collection_select :category, Product::CATEGORIES, :to_s, :to_s
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :image
    = f.file_field :image
  .field
    = f.label :price
    = f.number_field :price
  .actions
    = f.submit 'Save'
